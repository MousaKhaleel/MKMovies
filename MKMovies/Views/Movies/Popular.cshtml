@model List<MKMovies.Models.Movie>
@{
    ViewData["Title"] = "Popular";
}
<h2>Popular</h2>
<section class="mainContent">
<div class="movieGroup">
    @foreach (var movie in Model)
    {
        <a asp-controller="Movies" asp-action="Review" asp-route-id="@movie.Id"></a>
        <div class="movieContainer">
        <h5>@movie.Title</h5>
        <hr />
        <p>@movie.Plot</p>
        <img src="@movie.ImageUrl" width="250px" />
        <p>Rating: @movie.Rating ⭐</p>
        </div>
    }
</div>
</section>